{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ESNext"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  }
}